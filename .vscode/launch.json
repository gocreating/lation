            "cwd": "${workspaceRoot}",
            "args": [
                "encrypt",
                "--src",
                "README.md",
                "--dest",
                "README.encrypted.md",
                "--password",
                "test",
            ]
        },
        {
            "name": "Decrypt File",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/lation.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}",
            "args": [
                "decrypt",
                "--src",
                "README.encrypted.md",
                "--dest",
                "README.md",
                "--password",
                "test",
            ]
        },
    ]
